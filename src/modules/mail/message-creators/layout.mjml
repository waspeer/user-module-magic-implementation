      <mj-section border-radius="4px" />
      <mj-column background-color="white" width="500px" border-radius="8px" />
      <mj-text font-size="16px" line-height="24px" />
      <mj-button background-color='#5762D5' font-size="20px" />
    </mj-attributes>
  </mj-head>

  <mj-body background-color="whitesmoke">
